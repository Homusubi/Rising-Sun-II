		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MALE_5"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MALE_6"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MALE_7"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MALE_8"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MALE_9"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MALE_10"/>
		<!-- 10 default female names -->
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_1" Female="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_2" Female="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_3" Female="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_4" Female="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_5" Female="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_6" Female="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_7" Female="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_8" Female="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_9" Female="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__FEMALE_10" Female="true"/>
		<!-- 10 default modern male names -->
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MODERN_MALE_1" Modern="true"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MODERN_MALE_2" Modern="true"/>

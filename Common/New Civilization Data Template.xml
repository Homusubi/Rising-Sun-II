<GameInfo>
	<Types>
		<Row Type="CIVILIZATION_" Kind="KIND_CIVILIZATION"/>
		<Row Type="LEADER_" Kind="KIND_LEADER"/>
	</Types>
	
	<!-- Unique units, buildings, and districts are attached to traits here, but will be defined in their own relevant files -->
	<!-- Modifiers will be defined in their own file -->
	<Traits>
		<Row TraitType="TRAIT_CIVILIZATION_" Name="LOC_TRAIT_CIVILIZATION__NAME" Description="LOC_TRAIT_CIVILIZATION__DESCRIPTION"/>
		<Row TraitType="TRAIT_LEADER_" Name="LOC_TRAIT_LEADER__NAME" Description="LOC_TRAIT_LEADER__DESCRIPTION"/>
	</Traits>

	<Civilizations>
		<Row CivilizationType="CIVILIZATION_" Name="LOC_CIVILIZATION__NAME" Description="LOC_CIVILIZATION__DESCRIPTION" Adjective="LOC_CIVILIZATION__ADJECTIVE" StartingCivilizationLevelType="CIVILIZATION_LEVEL_FULL_CIV" RandomCityNameDepth="10"/>
	</Civilizations>

	<CivilizationInfo>
		<Row CivilizationType="CIVILIZATION_" Header="LOC_CIVINFO_LOCATION" Caption="LOC_CIVINFO__LOCATION" SortIndex="10" />
		<Row CivilizationType="CIVILIZATION_" Header="LOC_CIVINFO_SIZE" Caption="LOC_CIVINFO__SIZE" SortIndex="20" />
		<Row CivilizationType="CIVILIZATION_" Header="LOC_CIVINFO_POPULATION" Caption="LOC_CIVINFO__POPULATION" SortIndex="30" />
		<Row CivilizationType="CIVILIZATION_" Header="LOC_CIVINFO_CAPITAL" Caption="LOC_CIVINFO__CAPITAL" SortIndex="40" />
	</CivilizationInfo>
	
	<CivilizationTraits>
		<Row CivilizationType="CIVILIZATION_" TraitType="TRAIT_CIVILIZATION_"/>
	</CivilizationTraits>

	<CityNames>
		<!-- There should be around 30 city names -->
		<Row CivilizationType="" CityName="LOC_CITY_NAME_"/>
	</CityNames>
	
	<CivilizationCitizenNames>
		<!-- 10 default male names -->
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MALE_1"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MALE_2"/>
		<Row CivilizationType="CIVILIZATION_" CitizenName="LOC_CITIZEN__MALE_3"/>

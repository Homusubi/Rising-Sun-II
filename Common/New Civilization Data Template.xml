	<CivilizationLeaders>
		<Row CivilizationType="CIVILIZATION_" LeaderType="LEADER_" CapitalName="LOC_CITY_NAME_"/>
	</CivilizationLeaders>
		
	<Leaders>
		<Row LeaderType="LEADER_" Name="LOC_LEADER__NAME" InheritFrom="LEADER_DEFAULT" SceneLayers="4"/>
	</Leaders>
	
	<LeaderTraits>
		<Row LeaderType="LEADER_" TraitType="TRAIT_LEADER_"/>
	</LeaderTraits>
	
	<!-- Keep QuoteAudio field blank for custom civilizations -->
	<LeaderQuotes>
		<Row LeaderType="LEADER_" Quote="LOC_PEDIA_LEADERS_PAGE_LEADER__QUOTE" QuoteAudio=""/>
	</LeaderQuotes>
	
	<HistoricalAgendas>
		<Row LeaderType="LEADER_" AgendaType="AGENDA_"/>
	</HistoricalAgendas>
	
	<!-- Each ListType should begin with the leader's name as a prefix...i.e. MontezumaCivics -->
	<AiListTypes>
		<Row ListType="Civics"/>
		<Row ListType="Techs"/>
		<Row ListType="Wonders"/>
	</AiListTypes>
	
	<AiLists>
		<Row ListType="Wonders" LeaderType="TRAIT_LEADER_" System="Buildings"/>
		<Row ListType="Civics" LeaderType="TRAIT_LEADER_" System="Civics"/>
		<Row ListType="Techs" LeaderType="TRAIT_LEADER_" System="Technologies"/>
	</AiLists>
	
	<!-- Multiple Items can fall under each ListType -->
	<AiFavoredItems>
		<Row ListType="Wonders" Item="BUILDING_"/>
		<Row ListType="Civics" Item="CIVIC_"/>
		<Row ListType="Techs" Item="TECH_"/>
	</AiFavoredITems>
	
	<!-- Color is tied to Leader, not Civilization -->
	<Colors>
		<Row>
			<Type>COLOR_PLAYER__SECONDARY</Type>
			<Red>0</Red>
			<Green>0</Green>
			<Blue>0</Blue>
			<Alpha>1</Alpha>
		</Row>
		<Row>
			<Type>COLOR_PLAYER__PRIMARY</Type>
			<Red>0</Red>
			<Green>0</Green>
			<Blue>0</Blue>
			<Alpha>1</Alpha>
		</Row>
	</Colors>
	
	<PlayerColors>
		<Row>
			<Type>LEADER_</Type>
			<Usage>Unique</Usage>
			<PrimaryColor>COLOR_PLAYER__PRIMARY</PrimaryColor>
			<SecondaryColor>COLOR_PLAYER__SECONDARY</SecondaryColor>
			<TextColor>COLOR_PLAYER_WHITE_TEXT</TextColor>
		</Row>
	</PlayerColors>
</GameInfo>
